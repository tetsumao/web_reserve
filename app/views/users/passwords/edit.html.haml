%h2 パスワードの変更
= simple_form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :put }) do |f|
  = f.error_notification
  = f.input :reset_password_token, as: :hidden
  = f.full_error :reset_password_token
  .form-inputs
    = f.input :password, label: "新しいパスワード", required: true, autofocus: true, hint: ("#{@minimum_password_length} 文字以上" if @minimum_password_length), input_html: { autocomplete: "new-password" }
    = f.input :password_confirmation, label: "新しいパスワードの確認", required: true, input_html: { autocomplete: "new-password" }
  .form-actions.text-center
    = f.button :submit, "パスワードの変更", class: 'btn btn-primary'
= render "users/shared/links"
